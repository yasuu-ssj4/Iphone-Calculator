<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:fontFamily="@font/sffont"
        android:gravity="right"
        android:text=""
        android:textColor="@color/white"
        android:textSize="80dp" />

</LinearLayout>

    <LinearLayout
        style="@style/calculLine">
        <Button
            android:id="@+id/clear"
            android:text="AC"
            style="@style/calcBtnWhite"
            tools:ignore="InvalidId">

        </Button>
<Button
    android:text="+/-"
    android:id="@+id/sign"

    style="@style/calcBtnWhite">

</Button>
        <Button
            android:id="@+id/percent"
            android:text="%"

            style="@style/calcBtnWhite">

        </Button>

        <Button
            android:id="@+id/div"
            android:text="รท"


            style="@style/calcBtnOrange">

        </Button>
    </LinearLayout>
    <LinearLayout

        style="@style/calculLine">
        <Button
            android:text="7"
            android:id="@+id/seven"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:text="8"
            android:id="@+id/eight"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:text="9"
            android:id="@+id/nine"
            style="@style/calcBtnGrey">

        </Button>
        <Button
            android:text="ร"
            android:id="@+id/mul"
            style="@style/calcBtnOrange">

        </Button>
    </LinearLayout>
    <LinearLayout

        style="@style/calculLine">

        <Button
            android:id="@+id/four"
            android:text="4"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:id="@+id/five"
            android:text="5"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:id="@+id/six"
            android:text="6"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:id="@+id/minus"
            style="@style/calcBtnOrange"
            android:text="-">

        </Button>
    </LinearLayout>
    <LinearLayout

        style="@style/calculLine">
        <Button
            android:id="@+id/one"
            android:text="1"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:id="@+id/two"
            android:text="2"
            style="@style/calcBtnGrey">

        </Button>

        <Button
            android:id="@+id/three"
            android:text="3"
            style="@style/calcBtnGrey">

        </Button>
        <Button
            android:id="@+id/plus"
            android:text="+"
            style="@style/calcBtnOrange">

        </Button>
    </LinearLayout>
    <LinearLayout

        style="@style/calculLine">
        <Button
            android:layout_width="180dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/zero"
            android:text="0"
            android:textSize="44dp"
            android:fontFamily="@font/sffont"
            android:textColor="@color/white"
            android:background="@drawable/zerobtn"
            android:layout_height="80dp">
        </Button>

        <Button
            android:id="@+id/floatpoint"
            android:text="."
            style="@style/calcBtnGrey">

        </Button>
        <Button
            android:id="@+id/equal"
            android:text="="
            style="@style/calcBtnOrange">

        </Button>

    </LinearLayout>


</LinearLayout>